<h1>Comments</h1>
<p>its a question partial..</p>

<ul>
  <% @question.comments.each do |comment| %>

  <li> <%= comment.text %>
    <br>
    <%= comment.author.user_name %> </li>
    <%if current_user.try(:id) == comment.author_id  %>
      <form action='/questions/<%= @question.id %>/comments/<%= comment.id %>/delete' method='POST'>
        <input type='hidden' name='_method' value='DELETE'>
        <input type='submit' value='Delete Comment'>
      </form>
    <% end %>
  <% end %>
</ul>
